{
    "manifest_version": 2,
    "name": "brainlyjs",
    "version": "1.0.0",

    "description": "Blocks brainly paywall by clearing local storage on page load.",

    "content_scripts": [
        {
            "matches": ["*://*.brainly.com/*"],
            "js": ["index.js"]
        }
    ],

    "permissions": [
        "storage"
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "forsakenceramic@users.noreply.github.com"
        }
    }
}